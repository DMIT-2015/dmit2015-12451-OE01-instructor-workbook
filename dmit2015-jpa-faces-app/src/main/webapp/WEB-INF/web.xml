<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd"
         version="6.0">

    <security-role>
        <role-name>Sales</role-name>
    </security-role>

    <security-role>
        <role-name>Shipping</role-name>
    </security-role>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>TaskResources</web-resource-name>
            <url-pattern>/tasks/manage.xhtml</url-pattern>
            <url-pattern>/tasks/manage</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>Shipping</role-name>
            <role-name>Sales</role-name>
        </auth-constraint>
    </security-constraint>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>WeatherResources</web-resource-name>
            <url-pattern>/weatherforecasts/manage.xhtml</url-pattern>
            <url-pattern>/weatherforecasts/manage</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>Sales</role-name>
        </auth-constraint>
    </security-constraint>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>StudentsResources</web-resource-name>
            <url-pattern>/students/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>Shipping</role-name>
        </auth-constraint>
    </security-constraint>

    <security-constraint>
        <display-name>Use HTTPS only</display-name>
        <web-resource-collection>
            <web-resource-name>sslResources</web-resource-name>
            <url-pattern>/*</url-pattern>
        </web-resource-collection>
        <user-data-constraint>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
    </security-constraint>

    <error-page>
        <error-code>401</error-code>
        <location>/WEB-INF/errorpages/401.xhtml</location>
    </error-page>
    <error-page>
        <error-code>403</error-code>
        <location>/WEB-INF/errorpages/403.xhtml</location>
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF/errorpages/404.xhtml</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/errorpages/500.xhtml?fromErrorPage=true</location>
    </error-page>
    <error-page>
        <exception-type>jakarta.faces.application.ViewExpiredException</exception-type>
        <location>/WEB-INF/errorpages/expired.xhtml</location>
    </error-page>

    <welcome-file-list>
        <welcome-file>index.xhtml</welcome-file>
    </welcome-file-list>

    <context-param>
        <param-name>jakarta.faces.AUTOMATIC_EXTENSIONLESS_MAPPING</param-name>
        <param-value>true</param-value>
    </context-param>

    <context-param>
        <param-name>jakarta.faces.INTERPRET_EMPTY_STRING_SUBMITTED_VALUES_AS_NULL</param-name>
        <param-value>true</param-value>
    </context-param>

